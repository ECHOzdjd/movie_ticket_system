		{
			"name": "用户服务",
			"item": [
				{
					"name": "用户注册",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"123456\",\n  \"phone\": \"13800138000\",\n  \"email\": \"test@example.com\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/user/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"user",
								"register"
							]
						},
						"description": "注册新用户"
					},
					"response": []
				},
				{
					"name": "用户登录",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.code === 200 && jsonData.data) {",
									"    pm.environment.set(\"token\", jsonData.data.token);",
									"    pm.environment.set(\"userId\", jsonData.data.userId);",
									"    console.log(\"Token 已保存:\", jsonData.data.token);",
									"    console.log(\"UserId 已保存:\", jsonData.data.userId);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"admin\",\n  \"password\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/user/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"user",
								"login"
							]
						},
						"description": "用户登录，自动保存 token 和 userId 到环境变量"
					},
					"response": []
				},
				{
					"name": "获取用户信息",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-User-Id",
								"value": "{{userId}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/user/info",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"user",
								"info"
							]
						},
						"description": "获取当前用户信息（需要先登录）"
					},
					"response": []
				}
			],
			"description": "用户注册、登录、信息管理"
		},
